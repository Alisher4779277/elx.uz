@model Elga_Xizmat.Models.Message
<br />
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="well well-sm">
                <form class="form-horizontal" action="~/Home/Contact" method="post">
                    <fieldset>
                        <legend class="text-center">Contact us</legend>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Type_Message, new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.DropDownListFor(m => m.Type_Message,
                                  new SelectList(ViewBag.TypesMessage, "ID", "Name"),
                                  "Murojaat turini tanlang",
                                  new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Type_Message, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- Message body -->
                        <div class="form-group">
                            <label class="col-md-3 control-label" for="message">Murojaat</label>
                            <div class="col-md-9">
                                <textarea class="form-control" name="Message1" placeholder="Matnni kiriting ..." rows="15"></textarea>
                            </div>
                        </div>

                        <!-- Form actions -->
                        <div class="form-group">
                            <div class="col-md-12 text-right">
                                <button type="submit" class="btn btn-primary btn-lg">Yuborish</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>