@model IEnumerable<Elga_Xizmat.Models.Users>

@{
    Layout = "~/Views/Shared/Layout_Admin.cshtml";
}
<div class="page-wrapper">
    <!-- Bread crumb -->
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-primary">Dashboard</h3>
        </div>
        <div class="col-md-7 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                <li class="breadcrumb-item active">Dashboard</li>
            </ol>
        </div>
    </div>
    <!-- End Bread crumb -->
    <!-- Container fluid  -->
    <div class="container-fluid">
        <!-- Start Page Content -->

        <div class="row bg-white m-l-0 m-r-0 box-shadow ">
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-title">
                        <h4>Foydalanuvchilar</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>FIO</th>
                                        <th>Login</th>
                                        <th>Tel nomer</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            <div class="round-img">
                                                <a href=""><img src="~/Content/cat.png" alt=""></a>
                                            </div>
                                        </td>
                                        <td>@item.User_Name</td>
                                        <td><span>@item.Email</span></td>
                                        <td><span>@item.Phone_number</span></td>
                                       @if (item.State == 1)
                                       {
                                        <td>
                                            @Html.ActionLink(" ", "StateAdminOrUser", new { id = item.ID }, new { @class = "fa fa-lock", @style = "color:purple" })&nbsp;&nbsp;
                                        @Html.ActionLink(" ", "EditUserOrAdmin", new { id = item.ID }, new { @class = "fa fa-pencil", @style = "color:blue" })&nbsp;&nbsp;
                                        @Html.ActionLink(" ", "DeleteUserOrAdmin", new { id = item.ID }, new { @class = "fa fa-trash", @style = "color:red" })
                                    </td>
                                       }
                                       else
                                       {
                                        <td>
                                            @Html.ActionLink(" ", "StateAdminOrUser", new { id = item.ID }, new { @class = "fa fa-unlock", @style = "color:purple" })&nbsp;&nbsp;
                                        @Html.ActionLink(" ", "EditUserOrAdmin", new { id = item.ID }, new { @class = "fa fa-pencil", @style = "color:blue" })&nbsp;&nbsp;
                                        @Html.ActionLink(" ", "DeleteUserOrAdmin", new { id = item.ID }, new { @class = "fa fa-trash", @style = "color:red" })
                                    </td>
                                       }
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                   
                </div>
            </div>
        </div>




        <!-- End PAge Content -->
    </div>
    <!-- End Container fluid  -->
    <!-- footer -->
    <!-- End footer -->
</div>
